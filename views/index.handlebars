<div class="container bg">

    <div class="row">
        <div class="col-lg-12">
            <img src="../public/assets/img/burger.jpg" alt="Burger Image">
            <h1>Eat-Da-Burger!</h1>
            <p></p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <br>
            <h2>Burger to Eat</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour It!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-6">

            <h2>These burgers have already been eaten</h2>

            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h2>Add A Burger!</h2>

            <form action="/task" method="POST">
                <textarea type="text" name="task"></textarea>
                <p>Enter a burger you want to order and click the Submit Order button.</p>
                <button type="submit">Submit</button>
            </form>

        </div>
    </div>

</div>