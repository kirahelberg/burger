<div class="container bg">

    <div class="row">
        <div class="col-lg-12">
            <img src="../public/assets/img/burger.jpg" alt="Burger Image">
            <h1>Eat-Da-Burger!</h1>
            <p></p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <br>
            <h3>Burgers to Eat</h3>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='btn-primary'>Devour It!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-6">

            <h3>These burgers have already been eaten</h3>

            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h4>Add A Burger!</h4>

            <form action="/burgers" method="POST">
                <textarea type="text" name="burger_name"></textarea>
                <p>Enter a burger you want to order and click the "submit" button.</p>
                <button type="submit">Submit</button>
            </form>

        </div>
    </div>

</div>